<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/poem_item_field"
        android:layout_width="match_parent"
        android:layout_height="90sp"
        android:layout_marginTop="5sp"
        android:src="@drawable/poem_item_field"/>

    <TextView
        android:id="@+id/poem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/poem_item_field"
        android:layout_marginTop="10sp"
        android:layout_marginStart="15sp"
        android:text="@string/poem_name_title"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/poem_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/poem_item_field"
        android:layout_marginBottom="10sp"
        android:layout_marginStart="15sp"
        android:text="@string/writer"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/grey"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/poem_item_field"
        android:layout_alignBottom="@id/poem_item_field"
        android:layout_alignEnd="@id/poem_item_field"
        android:layout_marginEnd="10sp"
        android:src="@drawable/ic_star"/>

    <TextView
        android:id="@+id/poem_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/poem_item_field"
        android:layout_alignBottom="@id/poem_item_field"
        android:layout_toStartOf="@id/star"
        android:gravity="center_vertical"
        android:layout_marginEnd="5sp"
        android:text="0.0/5"
        android:fontFamily="sans-serif"
        android:textColor="@color/grey"
        android:textSize="22sp" />

</RelativeLayout>